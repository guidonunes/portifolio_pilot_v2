<h1 class="wallet-title text-center jello-horizontal"><%= @wallet.name %></h1>
<div data-controller="render-oedit">
  <div class="container" data-controller="doughnut">
    <div class="d-flex justify-content-end">
      <%= link_to t("wallets.back_to_wallets"), wallets_path, class: "btn btn-cancel m-2 mb-5" %>
    </div>

    <div class="d-flex justify-content-between flex-column flex-md-row">
      <div class="d-flex flex-column wallet-cards-column">
        <!-- Total Value Card -->
        <div class="d-flex justify-content-center">
          <div class="card-total-balance">
            <div class="card-content pb-5">
              <div class="balance-title">
                <h2 class="card-title-spec p-5"><%= t("wallets.wallet_estimated_value") %></h2>
              </div>
              <div class="separator"></div>
              <div class="balance">
                <div class="balance-left">
                  <div class="currency mt-5 ps-5">R$</div>
                </div>
                <div data-controller="balance-toggle">
                  <div class="balance-right hidden" data-target="balance-toggle.visible">
                    <div class="balance-amount pe-5 mt-5">
                      <%= number_with_precision(@total_holdings, precision: 2) %>
                      <i class="fa-solid fa-eye ps-3" data-action="click->balance-toggle#toggle"></i>
                    </div>
                  </div>
                  <div class="balance-right" data-target="balance-toggle.hidden">
                    <div class="balance-amount p-3">
                      <strong>**********</strong>
                      <i class="fa-solid fa-eye-slash pe-5 mt-5" data-action="click->balance-toggle#toggle"></i>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Display appreciation/depreciation -->
              <div class="d-flex justify-content-end pe-5">
                <% if @total_holdings > @wallet.total_holdings_value %>
                  <div class="appreciation emerald-green">
                    <%#number_with_precision((@total_holdings - @wallet.total_holdings_value) / @wallet.total_holdings_value * 100, precision: 2) %>
                  </div>
                <% elsif @total_holdings < @wallet.total_holdings_value %>
                  <div class="appreciation ruby">
                    <%# number_with_precision((@wallet.total_holdings_value - @total_holdings) / @wallet.total_holdings_value * 100, precision: 2) %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- All-Time Profit Card -->
        <div class="d-flex justify-content-center">
          <div class="card-total-balance">
            <div class="card-content pb-5">
              <div class="balance-title">
                <h2 class="card-title-spec p-5"><%= t("wallets.all_time_profit") %></h2>
              </div>
              <div class="separator"></div>
              <div class="balance">
                <div class="balance-left">
                  <div class="currency mt-5 ps-5">R$</div>
                </div>
                <div data-controller="balance-toggle">
                  <div class="balance-right hidden" data-target="balance-toggle.visible">
                    <div class="balance-amount pe-5 mt-5">
                      <% percentage_change = @all_time_profit%>
                      <span class="<%= percentage_change < 0 ? 'performer-color-down' : 'performer-color-up' %>">
                        <%= number_with_precision(@all_time_profit, precision: 2) %>
                      </span>
                      <i class="fa-solid fa-eye ps-3" data-action="click->balance-toggle#toggle"></i>
                    </div>
                  </div>
                  <div class="balance-right" data-target="balance-toggle.hidden">
                    <div class="balance-amount p-3">
                      <strong>**********</strong>
                      <i class="fa-solid fa-eye-slash pe-5 mt-5" data-action="click->balance-toggle#toggle"></i>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Display profit or loss in percent -->
              <div class="d-flex justify-content-end pe-5">
                <% if @all_time_profit > 0 %>
                  <div class="appreciation">
                    <i class="fa-solid fa-caret-up"></i>
                    <%= number_with_precision(@percentage_change_total_holdings, precision: 2, class:"at-balance-amount-up") %>%
                  </div>
                <% elsif @all_time_profit < 0 %>
                  <div class="appreciation">
                    <i class="fa-solid fa-caret-down"></i>
                    <%= number_with_precision(@percentage_change_total_holdings, precision: 2) %>%%
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Allocation Pie Chart -->
      <div class="card-holdings-quantity mb-4 ms-md-3 mt-4 mt-md-0">
        <h2 class="card-title-spec text-center p-3"><%= t("wallets.allocation") %></h2>
        <%= render "layouts/doughnut" %>
      </div>
    </div>

    <div class="d-flex justify-content-between mb-4 flex-column flex-md-row">
      <!-- Best Performer -->
      <div class="performer-card m-1 performer-card-responsive">
        <div class="card-body">
          <h5 class="card-title-spec text-center p-3 my-3"><%= t("wallets.best_performer") %></h5>
          <% if @best_performer %>
            <div class="d-flex justify-content-evenly">
              <p class="performer-card-text px-3 pb-3">
                <%= @best_performer[:operation].holding.name %>
              </p>
              <p class="performer-card-text">
                <span class="performer-color-up"><i class="fa-solid fa-caret-up"></i><%= number_with_precision(@best_performer[:performance], precision: 2) %>%</span>
              </p>
            </div>
          <% else %>
            <p class="performer-card-text"><%= t("wallets.no_data_available") %></p>
          <% end %>
        </div>
      </div>

      <!-- Worst Performer -->
      <div class="performer-card m-1 performer-card-responsive">
        <div class="card-body">
          <h5 class="card-title-spec text-center p-3 my-3"><%= t("wallets.worst_performer") %></h5>
          <% if @worst_performer %>
            <div class="d-flex justify-content-evenly">
              <p class="performer-card-text px-3 pb-3">
                <%= @worst_performer[:operation].holding.name %>
              </p>
              <p class="performer-card-text">
                <span class="performer-color-down"><i class="fa-solid fa-caret-down"></i><%= number_with_precision(@worst_performer[:performance], precision: 2) %>%</span>
              </p>
            </div>
          <% else %>
            <p class="performer-card-text"><%= t("wallets.no_data_available") %></p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="wallet-card-container wallet-card">
      <div class="wallet">
        <div class="d-flex justify-content-between mb-5 flex-column flex-md-row">
          <h2 class="card-title-spec mb-3 mb-md-0"><%= t("wallets.assets") %></h2>
          <div class="d-flex flex-column flex-sm-row gap-2">
            <button type="button" class="btn btn-wallet mb-2 mb-sm-0" data-bs-toggle="modal" data-bs-target="#addOperationModal">
              <%= t("wallets.add_new_operation") %>
            </button>
            <%= link_to t("wallets.edit_wallet_name"), edit_wallet_path(@wallet), class: "btn btn-wallet", data: { bs_toggle: "modal", bs_target: "#nameOperationModal" }%>
          </div>
        </div>

        <!-- Grid Operations -->
        <div class="grid-header text-center">
          <div class="column"><%= t("operations.name") %></div>
          <div class="column"><%= t("operations.price") %></div>
          <div class="column"><%= t("assets.price_24h") %></div>
          <div class="column"><%= t("operations.avg_buy_price") %></div>
          <div class="column"><%= t("operations.holdings") %></div>
          <div class="column"><%= t("operations.actions") %></div>
        </div>

        <% @wallet.operations.each do |operation| %>
          <div class="grid-operation text-center">
            <div class="column ms-4" data-label="<%= t("operations.name") %>" data-doughnut-target="holdingName"><%= operation.holding.name %></div>
            <div class="column" data-label="<%= t("operations.price") %>" data-doughnut-target="holdingAmount">R$ <%= number_with_precision(operation.holding.update_current_price, precision: 2) %></div>
            <% if operation.holding.asset_type == 'fiat'  %>
              <% percentage_change = HgFinance.variation(operation.holding.abbreviation) %>
              <span class="<%= percentage_change < 0 ? 'performer-color-down' : 'performer-color-up' %>">
                <div class="column" data-label="<%= t("assets.price_24h") %>"><%= number_with_precision(percentage_change, precision: 2) %>%</div>
              </span>
            <% else %>
              <% percentage_change = operation.holding.find_percentage_holding_info %>
              <span class="<%= percentage_change < 0 ? 'performer-color-down' : 'performer-color-up' %>">
                <div class="column" data-label="<%= t("assets.price_24h") %>"><%= number_with_precision(percentage_change, precision: 2) %>%</div>
              </span>
            <% end %>
            <div class="column" data-label="<%= t("operations.avg_buy_price") %>">R$ <%= number_with_precision(operation.price, precision: 2) %></div>
            <div class="column" data-label="<%= t("operations.holdings") %>">R$ <%= number_with_precision(operation.price * operation.quantity, precision: 2) %><br><span data-doughnut-target="holdingQuantity" class="text-quantity">Qtd.:<%= operation.quantity %></span></div>

            <!-- Actions Dropdown -->
            <div class="column actions mb-3">
              <div class="dropdown">
                <i class="fa-solid fa-ellipsis pe-auto" data-bs-toggle="dropdown" aria-expanded="false"></i>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <%= link_to t("operations.add"), new_wallet_operation_path(@wallet), class: "dropdown-item", data: { bs_toggle: "modal", bs_target: "#addOperationModal" } %>
                  <%= link_to t("operations.edit"), render_oedit_path(operation), class: "dropdown-item", data: { action: "click->render-oedit#render" } %>
                  <%= link_to t("operations.edit"), edit_operation_path(operation), class: "dropdown-item d-none", data: { bs_toggle: "modal", bs_target: "#editOperationModal" } %>
                  <%= link_to t("operations.delete"), operation_path(operation), class: "dropdown-item", data: { turbo_method: :delete, turbo_confirm: t("common.confirm") } %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- BOOTSTRAP MODALS: -->

  <!-- Bootstrap Modal - Edit Operation -->
  <div class="modal fade" id="editOperationModal" tabindex="-1" aria-labelledby="editOperationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title wobble-ver-left" id="editOperationModalLabel"><%= t("operations.edit_operation") %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" data-render-oedit-target="modalBody">
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Bootstrap Modal - Add New Operation -->
<div class="modal fade" id="addOperationModal" tabindex="-1" aria-labelledby="addOperationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title wobble-ver-left" id="addOperationModalLabel"><%= t("operations.add_operation") %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "onew", operation: Operation.new(wallet: @wallet) %>
      </div>
    </div>
  </div>
</div>



<!-- Bootstrap Modal - Edit Wallet Name -->
<div class="modal fade" id="nameOperationModal" tabindex="-1" aria-labelledby="nameOperationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title wobble-ver-left" id="nameOperationModalLabel"><%= t("wallets.edit_wallet_name") %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "form", wallet: Wallet.find(params[:id])%>
      </div>
    </div>
  </div>
</div>
